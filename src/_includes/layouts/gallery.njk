{% extends "layouts/base.njk" %}

{% block content %}
  <header class="gallery-header">
    <h1 class="gallery-header__title">{{ title }}</h1>
    <p class="gallery-header__description">{{ description }}</p>
  </header>

  <section class="gallery-grid">
    {{ content | safe }}
  </section>
{% endblock %}

<div class="modal micromodal-slide" id="work-detail-modal" aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>
    <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-title">
      <header class="modal__header">
        <h2 class="modal__title" id="modal-title">Modal Title</h2>
        <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
      </header>
      <main class="modal__content" id="modal-content">
        Modal content goes here.
      </main>
    </div>
  </div>
</div>

<!-- Add MicroModal library before main.js -->
<script src="https://unpkg.com/micromodal/dist/micromodal.min.js"></script>
<script src="/assets/js/main.js"></script>